{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "global-require": "off",
        "no-console": "warn",
        "no-undef": "warn",
        "no-unused-vars": "warn",
        "max-len": "warn",
        "import/no-dynamic-require": "off",
        "import/no-unresolved": [2, { "ignore": ["^#.+$"] }],
        "import/extensions": "off",
        "import/no-extraneous-dependencies": "off"
    }
}
